<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/setting"

    android:background="@drawable/setbk"
    android:gravity="right"
    >

        <TableLayout
            android:layout_width="958dp"
            android:layout_height="330dp">
                <TableRow>
                        <FrameLayout
                            android:layout_width="958dp"
                            android:layout_height="120dp"
                            >

                                <TextView
                                    android:id="@+id/editText1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:textAlignment="center"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textSize="30dp"
                                    android:text="레이아웃 구성 (선택)" />

                                <Button
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_gravity="center_vertical|right"
                                    android:id="@+id/go_main_btn2"
                                    android:onClick="go_main"
                                    android:layout_width="100dp"
                                    android:layout_height="60dp"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textSize="30dp"
                                    android:textColor="#FFFFFF"
                                    android:background="@drawable/round_btn"
                                    android:text="적용" />
                        </FrameLayout>
                </TableRow>

                <TableRow>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="200dp"
                            android:layout_width="match_parent">

                                <TableLayout
                                    android:layout_width="480dp"
                                    android:layout_height="150dp">

                                        <TableRow>
                                                <FrameLayout
                                                    android:layout_gravity="center"
                                                    android:layout_width="480dp"
                                                    android:layout_height="150dp">

                                                        <ImageView
                                                            android:id="@+id/imageView"
                                                            android:layout_width="250dp"
                                                            android:layout_height="150dp"
                                                            android:layout_weight="1"
                                                            android:onClick="rayout_change_to1"
                                                            android:src="@drawable/left_new" />
                                                </FrameLayout>
                                        </TableRow>
                                </TableLayout>

                                <TableLayout
                                    android:layout_width="480dp"
                                    android:layout_height="150dp">

                                        <TableRow>
                                                <FrameLayout
                                                    android:layout_gravity="center"
                                                    android:layout_width="480dp"
                                                    android:layout_height="150dp">

                                                        <ImageView
                                                            android:id="@+id/imageView2"
                                                            android:layout_width="250dp"
                                                            android:layout_height="150dp"
                                                            android:layout_weight="1"
                                                            android:onClick="rayout_change_to2"
                                                            android:src="@drawable/right_new" />

                                                </FrameLayout>
                                        </TableRow>
                                </TableLayout>
                        </LinearLayout>
                </TableRow>
        </TableLayout>

        <FrameLayout
            android:layout_marginRight="60dp"
            android:layout_width="700dp"
            android:layout_height="50dp">

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_weight="1"

                    android:textSize="20dp"
                    android:text="어플리케이션 내의 텍스트의 색을 지정합니다" />

                <Button
                    android:layout_gravity="right"
                    android:layout_marginRight="50dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:id="@+id/btn_dialog"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:background="@drawable/round_btn"
                    android:text="글꼴색 설정"/>
        </FrameLayout>


        <FrameLayout
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_width="700dp"
            android:layout_height="50dp">

                <TextView
                    android:id="@+id/editText3"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="                        메인화면의 배경을 지정합니다" />
                <Button
                    android:layout_gravity="right"
                    android:layout_marginRight="50dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/set_bk_btn"
                    android:textStyle="bold"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:background="@drawable/round_btn"
                    android:onClick="set_bk"
                    android:text="배경화면 설정" />
        </FrameLayout>



</LinearLayout>